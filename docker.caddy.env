# Docker Environment Configuration with Caddy Reverse Proxy
# Copy this file to .env and update the values as needed

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=etd_user
DB_PASSWORD=etd_password
DB_DATABASE=etd_db

# Backend Configuration
NODE_ENV=production
API_PORT=3836
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Frontend Configuration - Using Caddy with IP
NEXT_PUBLIC_API_URL=http://172.17.128.147/api

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
