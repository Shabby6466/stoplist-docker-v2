# Docker Environment Configuration for Server 172.17.128.147
# Copy this file to .env and update the values as needed

# Database Configuration - Update these with your external database credentials
DB_HOST=your_external_db_host
DB_PORT=5432
DB_USERNAME=stoplist_user
DB_PASSWORD=stoplist_password
DB_DATABASE=stoplist_db

# Backend Configuration
NODE_ENV=production
API_PORT=3836
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://172.17.128.147:3836/v1/api

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
